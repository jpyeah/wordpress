body{
    margin-bottom 100px;
}
.content-title{
    margin-top 15px;
    border-left 5px solid #C7A26C;
    padding-left 5px;
    overflow hidden;
    h4{
        display block;
        font-size 18px;
        margin-top 5px;
    }
    span{
        display block;
        font-size 12px;
        margin-top 5px;
    }
}

.swipe{
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;
    .swipe-item{
        width: 100%;
        height: 500px;
    }
}

.item-cover{
    width 100%;
    height 180px;
    img{
        width 100%;
        height 180px;
        object-fit cover;
    }
}

.item-box>div{
    margin-top 15px;
}

.item-avatar{
    width 100%;
    height 40px;
    overflow hidden;
    margin-top 15px;
    img{
        width 40px;
        height 40px;
        object-fit:cover;
        float left;
        border-radius 100%;
    }
    label{
        line-height 40px;
        float left;
        margin-left 15px;
    }
}

.item-slider-line{
    margin-top 20px;
    height 3px;
    background #eee;
    .item-slider-active{
        height 3px;
        width 100%;
        background #ccc;
    }
}

.category-box{
    margin-top: 20px;
    padding-bottom: 20px;
    overflow: hidden;
    background: #fafafa;
}
.cate-item{
    background: #3C3C3C;
    width: 100%;
    height: 100px;
    margin-top: 15px;
    img{
        display: block;
        margin: 0 auto;
        padding-top: 20px;
        padding-bottom: 5px;
        width: 40px;
        height: 60px;
    }
    label{
        display: block;
        color: #fff;
        text-align: center;
    }
}

.news-box{
    .news-item{
        margin: 15px 0;
        span{
            display: block;
            font-size: 14px;
        }
        h4{
            font-size: 16px;
            padding: 5px 0;
        }
        p{
            font-size: 14px;
            color: #333434;
            padding: 5px 0;
        }
        a{
            display: block;
            font-size: 16px;
            color: #00A0E9;
        }
    }
    .qrcode{
        background: #F5F3F4;
        width: 100%;
        padding: 20px;
        margin-top: 40px;
        span{
            display: block;
            text-align: center;
            font-size: 12px;
        }
        img{
            width: 140px;
            margin: 0 auto;
        }
    }
}

.footer{
    background: #fafafa;
    height: 200px;
    h3{
        text-align: center;
        padding: 15px 0;
    }
}


/* 登录 */
.login-header{
    width: 100%;
    height: 80px;
    background: #fff;
    .login-nav{
        width: 100%;
        margin: 20px auto;
    }
}
.login-container{
  background: #eee;
  .login-box{
    height: 290px;
    background: #fff;
    margin: 70px auto;
    padding: 20px;
    .login-cover{
       img{
            width: 100%;
            height: 250px;
       }
    }
    .login-form{
        .error-msg{
            display: block;
            float: right;
            font-size: 12px;
            padding: 5px;
            color: #DF6748;
        }
        .btn-submit{
            background: #DF6748;
            width: 100%;
            color: #fff;
        }
        .login-tool{
            font-size: 14px;
            padding: 10px 0;
            span{
                display: block;
                float: left;
            }
            a{
                list-style: none;
                text-decoration: none;
                color: #DF6748;
            }
            a:hover{
                text-decoration: none;
            }
            a:nth-child(2){
                display: block;
                float: left;
            }
            a:nth-child(3){
                display: block;
                float: right;
            }
        }
    }
  }
}

.login-bottom-item{
    width: 100%;
    img{
        display: block;
        width: 60px;
        height: 60px;
        margin: 20px auto;
    }
    h5{
        font-size: 12px;
        text-align: center;
        padding-bottom: 10px;
    }
    span{
        display:block;
        text-align: center;
        font-size: 12px;
    }
}

.regist-form{
    background: #fff;
    padding: 15px;
    margin: 130px 0;
    overflow: hidden;
    .regist-msg{
        float: right;
        font-size: 14px;
        a{
            margin-left: 10px;
        }
    }
    .btn-regist{
        width: 100%;
        background: #E06849;
        color: #fff;
    }
}

.video-box{
    background: #eee;
    padding-bottom: 20px;
    #video-pc{
        margin: 0 auto;
    }
    #video-mobile{
        margin: 0 auto;
    }
}